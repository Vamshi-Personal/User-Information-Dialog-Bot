{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
      {
          "type": "TextBlock",
          "text": "Which state are you from?",
          "wrap": true
      },
      {
          "type": "Input.Text",
          "id": "state",
          "placeholder": "Enter your state",
          "isMultiline": false
      },
      {
          "type": "ActionSet",
          "actions": [
              {
                  "type": "Action.Submit",
                  "title": "Submit"
              }
          ]
      }
  ]
}
